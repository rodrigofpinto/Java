package gestaoescolar;

public class Aluno {
    private String nome;
    private String numero; // Alterado para String, já que o número da matrícula pode ter letras

    // Construtor para inicializar o nome e número do aluno
    public Aluno(String nome, String numero) {
        this.nome = nome;
        this.numero = numero;
    }

    // Método para exibir informações do aluno
    public void exibirInformacoes() {
        System.out.println("Informações do Aluno:");
        System.out.println("Nome: " + nome);
        System.out.println("Número de Matrícula: " + numero);
    }
}
