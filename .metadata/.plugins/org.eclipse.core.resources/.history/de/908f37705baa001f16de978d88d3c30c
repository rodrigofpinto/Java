package gestaoescolar;

import java.util.Scanner;
public class Main {
	public static void main(String[] args) {

        Aluno aluno1 = new Aluno("Rodrigo Pinto", 12345);
        Aluno aluno2 = new Aluno("Maria Isabel", 54321);
        
        Aluno[] arrayAlunos = {aluno1, aluno2};
        Scanner meuObj = new Scanner(System.in);
        System.out.println("Qual aluno deseja verificar:");
        int alunoConfirm = meuObj.nextInt();
        
        
        arrayAlunos[alunoConfirm-1].listAluno();
	}
	
	
}
