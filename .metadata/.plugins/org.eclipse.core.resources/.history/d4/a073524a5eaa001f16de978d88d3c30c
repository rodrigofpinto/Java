package gestaoescolar;

public class Aluno {
    private String nome;
    private String numero;  // Número de matrícula

    // Construtor para inicializar o nome e número do aluno
    public Aluno(String nome, String numero) {
        this.nome = nome;
        this.numero = numero;
    }

    // Método para exibir informações do aluno
    public void exibirInformacoes() {
        System.out.println("Informações do Aluno:");
        System.out.println("Nome: " + nome);
        System.out.println("Número de Matrícula: " + numero);
    }

    // Método para buscar um aluno por número de matrícula
    public static void buscarPorNumero(Aluno[] arrayAlunos, String numero) {
        boolean alunoEncontrado = false;

        // Loop para procurar o aluno no array
        for (Aluno aluno : arrayAlunos) {
            if (aluno.numero.equals(numero)) {  // Compara o número fornecido com o do aluno
                aluno.exibirInformacoes();  // Exibe as informações do aluno encontrado
                alunoEncontrado = true;  // Marca que o aluno foi encontrado
                break;  // Sai do loop quando o aluno for encontrado
            }
        }

        // Caso o aluno não seja encontrado
        if (!alunoEncontrado) {
            System.out.println("Erro: Aluno com número de matrícula " + numero + " não encontrado.");
        }
    }

    // Método para escolher um aluno pelo índice no array
    public static void escolherPorIndice(Aluno[] arrayAlunos, int indice) {
        // Verifica se o índice está dentro do intervalo válido
        if (indice >= 0 && indice < arrayAlunos.length) {
            arrayAlunos[indice].exibirInformacoes();  // Exibe as informações do aluno encontrado
        } else {
            System.out.println("Erro: Índice de aluno inválido!");
        }
    }
}
